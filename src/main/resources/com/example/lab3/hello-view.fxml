<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.ScrollPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.lab3.HelloController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Makale Graf Analiz Uygulaması"
                   style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TextArea fx:id="outputArea"
                      editable="false"
                      wrapText="true"
                      prefWidth="350"
                      style="-fx-font-family: 'Consolas'; -fx-font-size: 13;"/>

            <ScrollPane HBox.hgrow="ALWAYS" pannable="true"
                        style="-fx-background-color: transparent;">
                <content>
                    <Pane fx:id="graphPane"
                          prefWidth="800" prefHeight="600"
                          style="-fx-background-color: #f5f5f5;"/>
                </content>
            </ScrollPane>
        </HBox>
    </center>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Görünüm (Zoom):" style="-fx-font-weight: bold;"/>

        <Button text="+"
                onAction="#onZoomInClick"
                prefWidth="40"
                style="-fx-font-weight: bold; -fx-font-size: 14;"/>

        <Button text="-"
                onAction="#onZoomOutClick"
                prefWidth="40"
                style="-fx-font-weight: bold; -fx-font-size: 14;"/>

        <Button text="Sıfırla"
                onAction="#onResetZoomClick"
                style="-fx-font-size: 11;"/>
    </HBox>


    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="JSON'u Yükle ve İstatistikleri Göster"
                        onAction="#onLoadJsonClick"/>
                <TextField fx:id="articleIdField" prefWidth="300"
                           promptText="H-index için makale ID girin"/>
                <Button text="H-index Hesapla"
                        onAction="#onComputeHIndexClick"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="K-Core Analizi:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="kInput" promptText="k değeri" prefWidth="80"/>

                <Button text="K-Core Uygula (Ekranda)"
                        onAction="#onLocalKCoreClick"
                        style="-fx-background-color: #ffe0b2; -fx-border-color: #ff9800;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Ekstra Görünüm:" style="-fx-font-weight: bold;"/>
                <Button text="ID Sıralı Zinciri Göster (Yeşil Hat)"
                        onAction="#onShowGreenChainClick"
                        style="-fx-background-color: #e0f7fa; -fx-border-color: #006064;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Merkezilik Analizi:" style="-fx-font-weight: bold;"/>
                <Button text="Seçili Düğümün Arasılığını Hesapla"
                        onAction="#onCalculateCentralityClick"
                        style="-fx-background-color: #e1bee7; -fx-border-color: #8e24aa;"/>
            </HBox>

            <Label fx:id="errorLabel" text=""
                   style="-fx-text-fill: red; -fx-font-weight: bold; -fx-font-size: 12;"
                   alignment="CENTER_LEFT"/>
        </VBox>
    </bottom>

</BorderPane>
