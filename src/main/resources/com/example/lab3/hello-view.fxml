<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.lab3.HelloController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Makale Graf Analiz Uygulaması"
                   style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <TextArea fx:id="outputArea"
                  editable="false"
                  wrapText="true"
                  style="-fx-font-family: 'Consolas'; -fx-font-size: 13;"/>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="JSON'u Yükle ve İstatistikleri Göster"
                    onAction="#onLoadJsonClick"/>
        </HBox>
    </bottom>

</BorderPane>
