<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.lab3.HelloController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Makale Graf Analiz Uygulaması"
                   style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Sol: Metin çıktı alanı (daha dar) -->
            <TextArea fx:id="outputArea"
                      editable="false"
                      wrapText="true"
                      prefWidth="350"
                      style="-fx-font-family: 'Consolas'; -fx-font-size: 13;"/>

            <!-- Sağ: Graf alanı (daha geniş, büyüyebilen) -->
            <Pane fx:id="graphPane"
                  HBox.hgrow="ALWAYS"
                  prefWidth="800"
                  style="-fx-background-color: #f5f5f5; -fx-border-color: #cccccc;"/>
        </HBox>
    </center>

    <bottom>
        <VBox spacing="5">
            <HBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="5" left="10"/>
                </padding>
                <Button text="JSON'u Yükle ve İstatistikleri Göster"
                        onAction="#onLoadJsonClick"/>
                <TextField fx:id="articleIdField" prefWidth="400"
                           promptText="H-index hesaplamak için makale ID girin"/>
                <Button text="Seçili Makale için H-index Hesapla"
                        onAction="#onComputeHIndexClick"/>
            </HBox>
            <Label fx:id="errorLabel" text=""
                   style="-fx-text-fill: red; -fx-font-weight: bold; -fx-font-size: 12;"
                   alignment="CENTER_LEFT">
                <padding>
                    <Insets top="0" right="10" bottom="10" left="10"/>
                </padding>
            </Label>
        </VBox>
    </bottom>

</BorderPane>
